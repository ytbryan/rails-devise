<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li><a href="/">All questions</a></li>
  <li class="active"><%= @question.title[0..35] + " ...." %></li>
</ol>

<h3>
  <%= @question.title %>
</h3>
<p><%= link_to 'Edit question', edit_question_path(@question) %>, <%= link_to 'Delete question', @question, method: :delete, data: { confirm: 'Are you sure?' } %>
 - <%= @question.user.name %>, <%= time_ago_in_words(@question.created_at) %> ago</p>
<hr>
<p>
  <%= @question.body %>
</p>

